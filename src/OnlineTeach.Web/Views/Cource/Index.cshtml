@model IEnumerable<OnlineTeach.Web.Models.CourceViewModels.CourceItemCreateViewModel>
@using OnlineTeach.Web.Views.Cource

@{
    ViewData["Title"] = "课程列表";
    Layout = "~/Views/Cource/_Layout.cshtml";
    ViewData.SetActivePage(CourceNavPages.Index);

}
@Html.Partial("_StatusMessage", ViewData["StatusMessage"] as string)
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">添加课程</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-key="@item.Key">编辑</a> |
                    <a asp-action="Details" asp-route-key="@item.Key">详情</a> |
                    <a asp-action="Delete" asp-route-key="@item.Key">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
