@model IEnumerable<OnlineTeach.Web.Models.AdultViewModels.TeacherApplyViewModel>
@using OnlineTeach.Web.Views.Adult
@{
    ViewData["Title"] = "教师申请审核";
    Layout = "~/Views/Adult/_Layout.cshtml";
    ViewData.AddActivePage(AdultNavPages.Index);
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplyReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplyTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplyCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplyStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.School)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyStatus)
                </td>
                <td>
                    <button asp-action="Pass" asp-route-id="@item.Id">通过</button> |
                    <button asp-action="Deny" asp-route-id="@item.Id">拒绝</button>
                </td>
            </tr>
        }
    </tbody>
</table>
